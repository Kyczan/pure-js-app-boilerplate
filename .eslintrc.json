{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": ["babel"],
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off"
  },
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
